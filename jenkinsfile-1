pipeline {
    agent any
    environment {
        registry = "20l35a0114/uday"
        registryCredential = 'docker-jenkins-creds'
        dockerImage = ''
    }
    stages{
       stage("git clone"){
         steps{
            git branch: 'dev', credentialsId: 'git_credential', url: 'https://github.com/20l35a0114/Train-Ticket-Reservation-System1.git'
         }
      }
      stage("build code"){
         steps{
            sh "mvn clean install"
         }
      }
      stage("test code"){
         steps{
            sh "mvn test"
         }
      }
      stage("deploy code"){
         steps{
            sshagent(['tomcat']) {
    // some block
             sh "scp -o StrictHostKeyChecking=no target/TrainBook-1.0.0-SNAPSHOT.war ubuntu@54.144.104.104:/opt/tomcat/webapps"
            }
         }
      }
       stage("Build Docker"){
            steps {
              script {
                 dockerImage = docker.build registry + ":$BUILD_NUMBER"
              }
               
            }
        }
        stage("Push Docker"){
            steps {
                script {
                    docker.withRegistry( '', registryCredential ) {
                        dockerImage.push()
                    }
                }    
            }
        }
        stage('Remove Image') {
            steps{
                sh "docker rmi ${registry}:$BUILD_NUMBER"
                sh "docker rmi ${registry}:latest"
            }
        }
   }
}
  
